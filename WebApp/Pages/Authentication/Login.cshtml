@page



<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - Hair Salon Booking</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300;400;500;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Be Vietnam Pro', sans-serif;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Playfair Display', serif;
        }

        .login-bg {
            background-color: #f7fafc;
            background-image: linear-gradient(rgba(237, 242, 247, 0.8), rgba(237, 242, 247, 0.8)), url('https://placehold.co/1920x1080/e2e8f0/ffffff?text=Beauty+Salon');
            background-size: cover;
            background-position: center;
        }

        .dark .login-bg {
            background-color: #1a202c;
            background-image: linear-gradient(rgba(26, 32, 44, 0.9), rgba(26, 32, 44, 0.9)), url('https://placehold.co/1920x1080/2d3748/ffffff?text=Beauty+Salon');
        }
    </style>
</head>
<body class="login-bg dark:bg-gray-900">

    <div class="min-h-screen flex flex-col items-center justify-center px-4">

        <div class="text-center mb-8">
            <a href="/" class="text-4xl font-bold text-gray-800 dark:text-white">HairSalon</a>
        </div>

        <div class="max-w-md w-full bg-white dark:bg-gray-800 rounded-2xl shadow-2xl p-8">
            <h2 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-2">Chào mừng trở lại!</h2>
            <p class="text-center text-gray-600 dark:text-gray-400 mb-8">Đăng nhập để tiếp tục đặt lịch.</p>

            <!-- Form này sẽ là nơi bạn xử lý logic gọi API để lấy JWT Token -->
            <form id="login-form" action="#" method="POST">
                <!-- Thông báo lỗi (hiển thị khi cần) -->
                <div id="error-message" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg relative mb-6" role="alert">
                    <strong class="font-bold">Lỗi!</strong>
                    <span class="block sm:inline">Tên đăng nhập hoặc mật khẩu không chính xác.</span>
                </div>

                <div class="space-y-6">
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Tên đăng nhập hoặc Email</label>
                        <div class="mt-1">
                            <input id="username" name="username" type="text" autocomplete="username" required
                                   class="w-full p-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                                   placeholder="nhập username hoặc email">
                        </div>
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Mật khẩu</label>
                        <div class="mt-1">
                            <input id="password" name="password" type="password" autocomplete="current-password" required
                                   class="w-full p-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                                   placeholder="••••••••">
                        </div>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input id="remember-me" name="remember-me" type="checkbox"
                                   class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                            <label for="remember-me" class="ml-2 block text-sm text-gray-900 dark:text-gray-300">Ghi nhớ tôi</label>
                        </div>

                        <div class="text-sm">
                            <a href="/Authentication/ForgotPassword " class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
                                Quên mật khẩu?
                            </a>
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                                class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-300">
                            Đăng nhập
                        </button>
                    </div>
                </div>
            </form>

            <p class="mt-8 text-center text-sm text-gray-600 dark:text-gray-400">
                Chưa có tài khoản?


                <a href="/Authentication/Register" class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
                    Đăng ký ngay
                </a>
            </p>
        </div>
    </div>

    <script>
                   document.addEventListener('DOMContentLoaded', function () {
            const loginForm = document.getElementById('login-form');
            const errorMessage = document.getElementById('error-message');

            loginForm.addEventListener('submit', function (e) {
                e.preventDefault();
                errorMessage.classList.add('hidden');
                const username = document.getElementById('username').value;
                const password = document.getElementById('password').value;
                const rememberMe = document.getElementById('remember-me').checked;

                fetch('https://localhost:7144/api/auth/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, password, rememberMe })
                })
                .then(response => {
                    if (!response.ok) {
                        errorMessage.classList.remove('hidden');
                        throw new Error('Login failed');
                    }
                    return response.json();
                })
                .then(data => {
                    if (rememberMe) {
                        localStorage.setItem('jwtToken', data.token);
                    } else {
                        sessionStorage.setItem('jwtToken', data.token);
                    }
                    window.location.href = '/ServicesCustomer/Services';
                })
                .catch(() => errorMessage.classList.remove('hidden'));
            });
        });


    </script>

</body>
</html>
