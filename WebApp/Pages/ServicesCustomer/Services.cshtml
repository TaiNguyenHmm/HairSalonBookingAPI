@page
@{
    Layout = "_LayoutCustomer";
    ViewData["Title"] = "Chọn Dịch Vụ";
}

<section class="container mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold mb-8 text-center text-gray-900 dark:text-white">Chọn Dịch Vụ Của Bạn</h1>

    <!-- Danh sách dịch vụ -->
    <div id="service-list" class="mt-10 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 text-gray-800 dark:text-gray-200">
        <div class="col-span-3 text-center text-gray-500">Đang tải danh sách dịch vụ...</div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", async function () {
            const listContainer = document.getElementById("service-list");
            const apiUrl = "https://localhost:7144/api/Service";

            try {
                const response = await fetch(apiUrl);
                if (!response.ok) throw new Error("Không thể tải dịch vụ.");
                const services = await response.json();

                if (!services.length) {
                    listContainer.innerHTML = `<div class="col-span-3 text-center text-gray-500">Hiện chưa có dịch vụ nào.</div>`;
                    return;
                }

                listContainer.innerHTML = services.map(s => {
               console.log("Service từ API:", s);
        const duration = s.durationMinutes != null ? s.durationMinutes : 30;
        console.log("Duration dùng:", duration);


                    return `
                        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden flex flex-col transition-all duration-300 hover:shadow-2xl hover:-translate-y-2">
                            <img class="service-card-image" src="https://placehold.co/600x400/93c5fd/374151?text=${encodeURIComponent(s.name)}" alt="${s.name}">
                            <div class="p-6 flex-grow flex flex-col">
                                <h3 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white">${s.name}</h3>
                                <p class="text-gray-600 dark:text-gray-400 mb-4 flex-grow">${s.description ?? "Chưa có mô tả."}</p>
                                <div class="flex justify-between items-center text-gray-700 dark:text-gray-300 border-t border-gray-200 dark:border-gray-700 pt-4 mt-4">
                                    <span class="flex items-center font-medium">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="inline-block mr-2 text-indigo-500">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        ${duration} phút
                                    </span>
                                    <span class="text-xl font-bold text-indigo-600 dark:text-indigo-400">${s.price.toLocaleString()}đ</span>
                                </div>
                            </div>
                            <div class="p-4 bg-gray-50 dark:bg-gray-700/50">
                                <button class="w-full bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition duration-300 flex items-center justify-center space-x-2"
                                    onclick="chooseService(${s.id}, '${s.name}', ${duration})">
                                    <span>Chọn Dịch Vụ</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <line x1="5" y1="12" x2="19" y2="12"></line>
                                        <polyline points="12 5 19 12 12 19"></polyline>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    `;
                }).join("");

            } catch (error) {
                console.error(error);
                listContainer.innerHTML = `<div class="col-span-3 text-center text-red-500">Lỗi khi tải danh sách dịch vụ.</div>`;
            }
        });

        // Chọn service và chuyển sang trang CreateBooking với duration đúng
               // Chọn service và chuyển sang trang CreateBooking
        function chooseService(id, name /*, durationMinutes */) {
            const url = new URL(`${window.location.origin}/ServicesCustomer/CreateBooking`);
            url.searchParams.append('serviceId', id);
            // không cần durationMinutes nữa
            window.location.href = url.toString();
        }

    </script>
}

