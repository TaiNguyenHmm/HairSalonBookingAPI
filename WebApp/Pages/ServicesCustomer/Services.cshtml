@page


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chọn Dịch Vụ - Hair Salon Booking</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300;400;500;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Be Vietnam Pro', sans-serif;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Playfair Display', serif;
        }

        .service-card-image {
            aspect-ratio: 16 / 10;
            object-fit: cover;
        }
    </style>
</head>
<body class="bg-gray-50 dark:bg-gray-900 text-gray-800 dark:text-gray-200">

    <!-- Header for logged-in user -->
    <header class="bg-white dark:bg-gray-800 shadow-sm sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-gray-800 dark:text-white">HairSalon</a>
            <div class="flex items-center space-x-6">
                <a href="/services" class="text-indigo-600 dark:text-indigo-400 font-semibold border-b-2 border-indigo-500 pb-1">Dịch vụ</a>
                <a href="/bookings" class="text-gray-600 dark:text-gray-300 hover:text-indigo-600 dark:hover:text-indigo-400">Lịch hẹn của tôi</a>

                <!-- User Avatar -->
                <button title="Hồ sơ của bạn" class="w-10 h-10 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center overflow-hidden hover:ring-2 hover:ring-indigo-400 transition">
                    <!-- SVG Icon for profile -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-500 dark:text-gray-400"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                    <!-- <img src="path_to_user_avatar.jpg" alt="User Avatar" class="w-full h-full object-cover"> -->
                </button>

                <a href="#" id="logout-btn" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition duration-300 shadow-sm hover:shadow-md">Đăng xuất</a>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        <section id="services" class="py-16 md:py-24">
            <div class="container mx-auto px-6">
                <div class="text-center max-w-3xl mx-auto">
                    <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-white">Dịch Vụ Của Chúng Tôi</h1>
                    <p class="text-lg text-gray-600 dark:text-gray-400">
                        Khám phá các dịch vụ chăm sóc tóc chuyên nghiệp và chọn cho mình một phong cách mới.
                    </p>
                </div>

                <!-- Service List Container -->
                <!-- Bạn sẽ dùng AJAX để gọi API GET /api/services và đổ dữ liệu vào đây -->
                <div id="service-list" class="mt-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

                    <!-- Ví dụ mẫu 1 (sẽ được thay thế bằng dữ liệu thật) -->
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden flex flex-col transition-all duration-300 hover:shadow-2xl hover:-translate-y-2">
                        <img class="service-card-image" src="https://placehold.co/600x400/93c5fd/374151?text=Cắt+Tóc+Nam" alt="Cắt tóc nam">
                        <div class="p-6 flex-grow flex flex-col">
                            <h3 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white">Cắt tóc nam</h3>
                            <p class="text-gray-600 dark:text-gray-400 mb-4 flex-grow">Cắt tóc nam tiêu chuẩn, tạo kiểu gọn gàng, hiện đại theo xu hướng mới nhất.</p>
                            <div class="flex justify-between items-center text-gray-700 dark:text-gray-300 border-t border-gray-200 dark:border-gray-700 pt-4 mt-4">
                                <span class="flex items-center font-medium">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="inline-block mr-2 text-indigo-500"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
                                    30 phút
                                </span>
                                <span class="text-xl font-bold text-indigo-600 dark:text-indigo-400">100.000đ</span>
                            </div>
                        </div>
                        <div class="p-4 bg-gray-50 dark:bg-gray-700/50">
                            <button class="w-full bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition duration-300 flex items-center justify-center space-x-2">
                                <span>Chọn Dịch Vụ</span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                            </button>
                        </div>
                    </div>

                    <!-- Ví dụ mẫu 2 -->
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden flex flex-col transition-all duration-300 hover:shadow-2xl hover:-translate-y-2">
                        <img class="service-card-image" src="https://placehold.co/600x400/fca5a5/374151?text=Nhuộm+Tóc" alt="Nhuộm tóc">
                        <div class="p-6 flex-grow flex flex-col">
                            <h3 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white">Nhuộm tóc</h3>
                            <p class="text-gray-600 dark:text-gray-400 mb-4 flex-grow">Nhuộm màu thời trang, sử dụng sản phẩm cao cấp, an toàn cho da đầu và giữ màu bền lâu.</p>
                            <div class="flex justify-between items-center text-gray-700 dark:text-gray-300 border-t border-gray-200 dark:border-gray-700 pt-4 mt-4">
                                <span class="flex items-center font-medium">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="inline-block mr-2 text-indigo-500"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
                                    90 phút
                                </span>
                                <span class="text-xl font-bold text-indigo-600 dark:text-indigo-400">500.000đ</span>
                            </div>
                        </div>
                        <div class="p-4 bg-gray-50 dark:bg-gray-700/50">
                            <button class="w-full bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition duration-300 flex items-center justify-center space-x-2">
                                <span>Chọn Dịch Vụ</span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                            </button>
                        </div>
                    </div>

                    <!-- Ví dụ mẫu 3 -->
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden flex flex-col transition-all duration-300 hover:shadow-2xl hover:-translate-y-2">
                        <img class="service-card-image" src="https://placehold.co/600x400/a78bfa/374151?text=Uốn+Nhẹ" alt="Uốn nhẹ">
                        <div class="p-6 flex-grow flex flex-col">
                            <h3 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white">Uốn nhẹ</h3>
                            <p class="text-gray-600 dark:text-gray-400 mb-4 flex-grow">Tạo kiểu tóc uốn xoăn bồng bềnh, tự nhiên, đầy sức sống. Tư vấn kiểu uốn phù hợp với khuôn mặt.</p>
                            <div class="flex justify-between items-center text-gray-700 dark:text-gray-300 border-t border-gray-200 dark:border-gray-700 pt-4 mt-4">
                                <span class="flex items-center font-medium">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="inline-block mr-2 text-indigo-500"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
                                    60 phút
                                </span>
                                <span class="text-xl font-bold text-indigo-600 dark:text-indigo-400">300.000đ</span>
                            </div>
                        </div>
                        <div class="p-4 bg-gray-50 dark:bg-gray-700/50">
                            <button class="w-full bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition duration-300 flex items-center justify-center space-x-2">
                                <span>Chọn Dịch Vụ</span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-800">
        <div class="container mx-auto px-6 py-8">
            <div class="border-t border-gray-200 dark:border-gray-700 pt-8 text-center">
                <p class="text-gray-500 dark:text-gray-400">&copy; 2025 HairSalon Booking. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Script section for your AJAX calls -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const logoutBtn = document.getElementById('logout-btn');
            if (logoutBtn) {
                logoutBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    // Xoá JWT khỏi localStorage hoặc cookie
                    localStorage.removeItem('jwtToken');
                    // Có thể xoá thêm thông tin user khác nếu cần
                    // Chuyển về trang đăng nhập (hoặc home)
                    window.location.href = '/Home';
                });
            }

        });
    </script>

</body>
</html>

